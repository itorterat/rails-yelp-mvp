<% if @reviews.size.positive? %>
  <h5>Reviews for this restaurant</h5>
  <% @reviews.each do |review| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= review.content %>
      <span class="badge bg-black rounded-pill"><%= review.rating %></span>
    </li>
  <% end %>
<% else %>
  <h5>No review for this restaurant yet</h5>
<% end %>
